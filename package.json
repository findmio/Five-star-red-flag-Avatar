{
  "private": true,
  "scripts": {
    "start": "umi dev",
    "build": "umi build",
    "deploy": "npm run build && gh-pages -d dist",
    "postinstall": "umi generate tmp",
    "prettier": "prettier --write '**/*.{js,jsx,tsx,ts,less,md,json}'",
    "test": "umi-test",
    "test:coverage": "umi-test --coverage"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "dependencies": {
    "@ant-design/pro-layout": "^6.5.0",
    "ahooks": "^3.5.0",
    "antd-mobile": "^5.15.1",
    "axios": "^0.21.4",
    "cropperjs": "^1.5.12",
    "dayjs": "^1.10.7",
    "lodash": "^4.17.21",
    "qs": "^6.10.1",
    "react": "17.x",
    "react-dom": "17.x",
    "react-query": "^3.24.4",
    "umi": "^3.5.19"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.175",
    "@types/qs": "^6.9.7",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@umijs/preset-react": "1.x",
    "@umijs/test": "^3.5.19",
    "autoprefixer": "^10.3.5",
    "babel-plugin-import": "^1.13.3",
    "gh-pages": "^3.2.3",
    "lint-staged": "^10.0.7",
    "postcss-px-to-viewport": "^1.1.1",
    "prettier": "^2.2.0",
    "typescript": "^4.1.2",
    "yorkie": "^2.0.0"
  }
}
